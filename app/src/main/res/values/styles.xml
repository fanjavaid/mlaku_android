<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@color/primaryColor</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonPrimary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_default_height</item>
        <item name="android:layout_marginBottom">@dimen/padding_margin_8</item>
        <item name="fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_default_height</item>
        <item name="backgroundTint">#FFFFFF</item>
    </style>

    <!-- Text Styles -->


</resources>
